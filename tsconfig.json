{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["components/*"],
      "@styles/*": ["styles/*"],
      "@public/*": ["public/*"],
      "@pages/*": ["pages/*"],
      "@lib/*": ["lib/*"],
      "@context/*": ["context/*"],
      "@utils/*": ["utils/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "pages/roster/Roster.jsx", "pages/schedule/Calendar.jsx", "pages/schedule/Schedule.jsx", "utils/mongodb.js", "pages/index.jsx", "pages/index.jsx"],
  "exclude": ["node_modules"]
}
